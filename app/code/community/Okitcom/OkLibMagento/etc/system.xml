<?xml version="1.0"?>
<config>
	<sections>
		<okcheckout translate="label" module="oklibmagento">
			<label>OK</label>
			<tab>sales</tab>
			<frontend_type>text</frontend_type>
			<sort_order>50</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<general translate="label">
					<label>General</label>
					<frontend_type>text</frontend_type>
					<sort_order>0</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<environment translate="label">
							<label>Environment</label>
							<frontend_type>select</frontend_type>
							<source_model>Okitcom_OkLibMagento_Model_Config_Source_Environment</source_model>
							<sort_order>0</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Environment of OK to use.</comment>
						</environment>
					</fields>
				</general>
				<okcash translate="label">
					<label>OK Cash</label>
					<frontend_type>text</frontend_type>
					<sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<okcashsecret translate="label">
							<label>OK Cash API key</label>
							<frontend_type>text</frontend_type>
							<sort_order>0</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>API key for OK Cash</comment>
						</okcashsecret>
						<default_shipping_method translate="label">
							<label>Shipping method</label>
							<frontend_type>select</frontend_type>
							<source_model>Okitcom_OkLibMagento_Model_Config_Source_ShippingMethod</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Default shipping method to use in checkout</comment>
						</default_shipping_method>
						<order_status translate="label">
							<label>New order status</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_order_status</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
							<sort_order>3</sort_order>
						</order_status>
					</fields>
				</okcash>
				<okopen translate="label">
					<label>OK Open</label>
					<frontend_type>text</frontend_type>
					<sort_order>2</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<okopensecret translate="label">
							<label>OK Open API key</label>
							<frontend_type>text</frontend_type>
							<sort_order>0</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>API key for OK Open</comment>
						</okopensecret>
					</fields>
				</okopen>
			</groups>
		</okcheckout>
	</sections>
</config>
